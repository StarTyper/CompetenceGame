<div class="container margin-top">
  <div class="games-page">
    <div class="heading-games mb-5">
      <div class="top-row-games d-flex justify-content-between">
        <div class="title-games">
          <% if @user.language == "english" %>
            <h1 class="lato-bold">History</h1>
          <% elsif @user.language == "german" %>
            <h1 class="lato-bold">Verlauf</h1>
          <% end %>
        </div>
      </div>
      <div class="bottom-row-games">
        <%= link_to (if @user.language == "english"
                  "Back"
                elsif @user.language == "german"
                  "ZurÃ¼ck"
                end), games_path, class: "btn btn-outline-dark rounded-4" %>
      </div>
    </div>
    <!-- Line Charts History -->
    <div class="graph-games d-flex flex-column align-items-center">
      <!-- Positive Traits -->
      <div class="positive-traits mb-5 bg-white rounded-5 p-3 shadow col-xl-9 col-lg-10 col-md-11 col-sm-12">
        <h2 class="text-center mb-3 lato-regular">
            <% if @user.language == "german" %>
              Positive Eigenschaften
            <% elsif @user.language == "english" %>
              Positive Traits
            <% end %>
          </h2>
        <%= line_chart  @chart_data_positive,
                        colors: ["#cf6650", "#54A17A", "#2f9dce", "#ecc56d", "#8b5a88"],
                        legend: "bottom",
                        suffix: "",
                        download: {
                          enabled: true,
                          filename: "#{Date.today.strftime('%y%m%d')}_History of positive traits by #{@user.first_name} #{@user.last_name}",
                          background: "#ffffff"
                        }
        %>
      </div>
      <!-- Negative Traits -->
      <div class="negative-traits bg-white rounded-5 p-3 shadow col-xl-9 col-lg-10 col-md-11 col-sm-12">
        <h2 class="text-center mb-3 lato-regular">
            <% if @user.language == "german" %>
              Negative Eigenschaften
            <% elsif @user.language == "english" %>
              Negative Traits
            <% end %>
          </h2>
        <%= line_chart  @chart_data_negative,
                        colors: ["#cf6650", "#54A17A", "#2f9dce", "#ecc56d", "#8b5a88"],
                        legend: "bottom",
                        suffix: "",
                        download: {
                          enabled: true,
                          filename: "#{Date.today.strftime('%y%m%d')}_History of positive traits by #{@user.first_name} #{@user.last_name}",
                          background: "#ffffff"
                        }
        %>
      </div>
    </div>
  </div>
</div>
