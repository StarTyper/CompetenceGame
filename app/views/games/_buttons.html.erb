<%= turbo_frame_tag :buttons_frame do%>
  <!-- <div class="buttons-play"> -->
    <!-- Button Remaining -->
    <%= link_to remaining_path, class: "link-underline link-underline-opacity-0", data: { turbo_method: :patch } do %>
      <i class="bi
        <% if @game.pile == 0 %>
          bi-question-circle-fill
        <% else %>
          bi-question-circle
        <% end %>
        position-relative me-3" style="font-size: 2rem;">
        <span class="position-absolute top-0 translate-middle badge rounded-pill bg-danger" style="font-size: 0.8rem;">
          <%if @game.positive == true%>
            <%= @count_remaining_positive%>
          <%else%>
            <%= @count_remaining_negative%>
          <%end%>
          <span class="visually-hidden">unread messages</span>
        </span>
      </i>
    <% end %>
    <!-- Button Choosen -->
    <%= link_to choosen_path, class: "link-underline link-underline-opacity-0", data: { turbo_method: :patch } do %>
      <i class="bi
        <% if @game.pile == 1 %>
          bi-check-circle-fill
        <% else %>
          bi-check-circle
        <% end %>
        position-relative me-3" style="font-size: 2rem;">
        <span class="position-absolute top-0 translate-middle badge rounded-pill bg-danger" style="font-size: 0.8rem;">
          <%if @game.positive == true%>
            <%= @count_choosen_positive%>
          <%else%>
            <%= @count_choosen_negative%>
          <%end%>
          <span class="visually-hidden">unread messages</span>
        </span>
      </i>
    <% end %>
    <!-- Button Rejected -->
    <%= link_to rejected_path, class: "link-underline link-underline-opacity-0", data: { turbo_method: :patch } do %>
      <i class="bi
        <% if @game.pile == 2 %>
          bi-x-circle-fill
        <% else %>
          bi-x-circle
        <% end %>
        position-relative me-3" style="font-size: 2rem;">
        <span class="position-absolute top-0 translate-middle badge rounded-pill bg-danger" style="font-size: 0.8rem;">
          <%if @game.positive == true%>
            <%= @count_rejected_positive%>
          <%else%>
            <%= @count_rejected_negative%>
          <%end%>
          <span class="visually-hidden">unread messages</span>
        </span>
      </i>
    <% end %>
    <!-- Button "+" -->
    <%= link_to plus_path, class: "me-3 link-underline link-underline-opacity-0", style: "font-size: 2rem;", data: { turbo_method: :patch } do %>
      <% if @game.positive == true %>
        <i class="bi bi-plus-circle-fill"></i>
      <% else %>
        <i class="bi bi-plus-circle"></i>
      <% end %>
    <% end %>
    <!-- Button "-" -->
    <%= link_to minus_path, class: "me-3 link-underline link-underline-opacity-0", style: "font-size: 2rem;", data: { turbo_method: :patch } do %>
      <% if @game.positive == true %>
        <i class="bi bi-dash-circle"></i>
      <% else %>
        <i class="bi bi-dash-circle-fill"></i>
      <% end %>
    <% end %>
  <!-- </div> -->
<% end %>
