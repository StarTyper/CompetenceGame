<div class="new-game-form px-5 pt-5">
  <h1>
    <% if @user.language == "english" %>
      Create a New Game
    <% elsif @user.language == "german" %>
      Neues Spiel erstellen
    <% end %>
  </h1>

  <%= simple_form_for @game do |f| %>
    <%= f.input :name,
                label: (if @user.language == "english"
                          "Game Name"
                        elsif @user.language == "german"
                          "Spielname"
                        end),
                required: true %>

    <%= f.input :count_positive,
                label: (if @user.language == "english"
                          "Count of Positive Cards"
                        elsif @user.language == "german"
                          "Anzahl positiver Karten"
                        end),
                input_html: { value: 10 },
                hint: (if @user.language == "english"
                        "Please enter a natural number between 1 and 50."
                      elsif @user.language == "german"
                        "Bitte geben Sie eine natürliche Zahl zwischen 1 und 50 ein."
                      end) %>

    <%= f.input :count_negative,
                label: (if @user.language == "english"
                          "Count of Negative Cards"
                        elsif @user.language == "german"
                          "Anzahl negativer Karten"
                        end),
                input_html: { value: 5 },
                hint: (if @user.language == "english"
                          "Please enter a natural number between 1 and 50."
                        elsif @user.language == "german"
                          "Bitte geben Sie eine natürliche Zahl zwischen 1 und 50 ein."
                        end) %>

    <%= f.button :submit, (if @user.language == "english"
                  "Create Game"
                elsif @user.language == "german"
                  "Spiel erstellen"
                end), class: 'btn btn-outline-dark' %>
  <% end %>

  <%= link_to (if @user.language == "english"
                  "Back"
                elsif @user.language == "german"
                  "zurück"
                end), games_path, class: 'btn btn-outline-secondary mt-2' %>
</div>
